<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lesson_details_tutor.LessonDetailsTutorFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lessonDetailsTutor_swipeUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lessonDetailsTutor_hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="15:00"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toBottomOf="@+id/lessonDetailsTutor_hourTitle_tv"
                app:layout_constraintStart_toStartOf="@+id/lessonDetailsTutor_student_tv"
                app:layout_constraintTop_toTopOf="@+id/lessonDetailsTutor_hourTitle_tv"
                app:layout_constraintVertical_bias="0.555" />

            <TextView
                android:id="@+id/lessonDetailsTutor_studentTitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Student:"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lessonDetailsTutor_hourTitle_tv" />

            <TextView
                android:id="@+id/lessonDetailsTutor_hourTitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Hour:"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lessonDetailsTutor_dateTitle_tv" />

            <TextView
                android:id="@+id/lessonDetailsTutor_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="12.5.2021"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toBottomOf="@+id/lessonDetailsTutor_dateTitle_tv"
                app:layout_constraintStart_toStartOf="@+id/lessonDetailsTutor_hour_tv"
                app:layout_constraintTop_toTopOf="@+id/lessonDetailsTutor_dateTitle_tv" />

            <TextView
                android:id="@+id/lessonDetailsTutor_student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Omer Asher"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toBottomOf="@+id/lessonDetailsTutor_studentTitle_tv"
                app:layout_constraintStart_toEndOf="@+id/lessonDetailsTutor_studentTitle_tv"
                app:layout_constraintTop_toTopOf="@+id/lessonDetailsTutor_studentTitle_tv"
                app:layout_constraintVertical_bias="0.555" />

            <TextView
                android:id="@+id/lessonDetailsTutor_dateTitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Date:"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lessonDetailsTutor_subject_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_subject_math"
                app:layout_constraintBottom_toBottomOf="@+id/lessonDetailsTutor_student_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lessonDetailsTutor_student_tv"
                app:layout_constraintTop_toTopOf="@+id/lessonDetailsTutor_date_tv" />

            <Button
                android:id="@+id/lessonDetailsTutor_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Cancel Lesson"
                android:textSize="@dimen/button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lessonDetailsTutor_subject_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>