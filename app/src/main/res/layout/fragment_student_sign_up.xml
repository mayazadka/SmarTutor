<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign_up_student.SignUpStudentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/signUpStudent_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Sign Up - Student"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/signUpStudent_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Email"
                android:textColor="?android:attr/textColorSecondary" />

            <EditText
                android:id="@+id/signUpStudent_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Your email."
                android:inputType="textPersonName"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/signUpStudent_lastName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Last Name"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/signUpStudent_lastName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Your last name."
                android:inputType="textPersonName"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/signUpStudent_firstName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="First Name"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/signUpStudent_firstName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Your first name"
                android:inputType="textPersonName"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/signUpStudent_gender_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Gender"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <Spinner
                android:id="@+id/signUpStudent_gender_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/gender" />

            <TextView
                android:id="@+id/signUpStudent_birthdayDate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Birthday Date"
                android:textColor="?android:attr/textColorSecondary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/signUpStudent_birthdayDate_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/quicksand_bold"
                    android:inputType="date"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/signUpStudent_birthdayDate_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Choose Date"
                    android:textAllCaps="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/signUpStudent_grade_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Grade"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <Spinner
                android:id="@+id/signUpStudent_grade_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/grade"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/signUpStudent_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Password"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/signUpStudent_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Your password."
                android:inputType="textPassword"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/signUpStudent_confirmPassword_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Confirm Password"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/signUpStudent_confirmPassword_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Confirm your password."
                android:inputType="textPassword"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/signUpStudent_signUp_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signUpStudent_question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Have an account?"
                    android:textColor="?android:attr/textColorTertiary" />

                <TextView
                    android:id="@+id/signUpStudent_signIn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Sign In"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>